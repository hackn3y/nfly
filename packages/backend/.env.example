PORT=4100
NODE_ENV=development

# Database
DATABASE_URL=postgresql://nfluser:nflpass123@localhost:5432/nfl_predictor
MONGODB_URI=mongodb://nfluser:nflpass123@localhost:27017/nfl_gematria

