# ==============================================
# ML SERVICE - PRODUCTION ENVIRONMENT CONFIG
# ==============================================

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL - Same as backend
DATABASE_URL=postgresql://username:password@your-db-host:5432/nfl_predictor

# Redis - Same as backend
REDIS_URL=redis://:password@your-redis-host:6379

# ==============================================
# ML CONFIGURATION
# ==============================================
# Path to trained models
MODEL_PATH=/app/models

# Environment
DEBUG=false

# Number of worker processes (set based on CPU cores)
WORKERS=4

# ==============================================
# CACHE CONFIGURATION
# ==============================================
# Cache TTL in seconds
PREDICTIONS_CACHE_TTL=1800
STATS_CACHE_TTL=3600

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
