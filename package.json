{
  "name": "nfl-predictor",
  "version": "1.0.0",
  "description": "NFL Game Predictor combining ML and Gematria",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && cd packages/mobile && npm install && cd ../backend && npm install && cd ../ml-service && pip install -r requirements.txt",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:mobile": "cd packages/mobile && npm start",
    "dev:ml": "cd packages/ml-service && python app.py",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "keywords": [
    "nfl",
    "predictions",
    "machine-learning",
    "gematria",
    "sports-betting"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
